<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebd5b3"
    tools:context="com.wolfedendevs.twocityweather.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click the city to see the\ncurrent weather conditions"
            android:gravity="center"
            android:paddingBottom="32dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        <Button
            android:id="@+id/weatherLA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/Buttons"
            android:text="Los Angeles, CA"/>
        <Button
            android:id="@+id/weatherCLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.Button.Colored"
            android:theme="@style/Buttons"
            android:text="Charlotte, NC"/>
    </LinearLayout>

</RelativeLayout>
